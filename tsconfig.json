{
  "compilerOptions": {
    "target": "es6",
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "exclude": ["src/**/*.spec.ts"],
  "include": [
    "src/**/*.ts"
  ]
}
